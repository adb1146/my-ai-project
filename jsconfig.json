{
  "compilerOptions": {
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "c/*": ["force-app/main/default/lwc/*"],
      "lightning/*": ["$lightning/*"],
      "@salesforce/*": ["$salesforce/*"],
      "force/*": ["$force/*"]
    },
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "strict": false
  },
  "include": ["force-app/**/*", ".eslintrc.js"],
  "exclude": ["node_modules", "**/*.spec.js", "**/*.test.js"]
}
